{
  "name": "package-table",
  "version": "0.5.7",
  "description": "Auto generate a package table in markdown from JSON ",
  "author": "David Dias <mail@daviddias.me>",
  "license": "Apache-2.0 OR MIT",
  "homepage": "https://github.com/ipfs-shipyard/package-table#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipfs-shipyard/package-table.git"
  },
  "bugs": {
    "url": "https://github.com/ipfs-shipyard/package-table/issues"
  },
  "keywords": [
    "JSON",
    "Markdown",
    "module",
    "packages",
    "table",
    "track"
  ],
  "bin": "src/index.js",
  "main": "src/index.js",
  "files": [
    "src",
    "dist"
  ],
  "eslintConfig": {
    "extends": "ipfs",
    "parserOptions": {
      "project": true
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "breaking": true,
              "release": "major"
            },
            {
              "revert": true,
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "type": "deps",
              "release": "patch"
            },
            {
              "scope": "no-release",
              "release": false
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "chore",
                "section": "Trivial Changes"
              },
              {
                "type": "docs",
                "section": "Documentation"
              },
              {
                "type": "deps",
                "section": "Dependencies"
              },
              {
                "type": "test",
                "section": "Tests"
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "scripts": {
    "lint": "aegir lint",
    "test": "aegir test -t node",
    "release": "aegir release"
  },
  "devDependencies": {
    "aegir": "^42.2.0"
  }
}
